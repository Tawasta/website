<odoo>

    <template id="imagebank_gallery_error" name="Image Bank Error">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">
                <section class="o_gallery s_image_gallery o_grid o_spc-medium" data-columns="3" style="overflow: hidden;">
                    <div class="container">
                        <h2>Something went wrong!</h2>
                        <p>Please try again.</p>
                    </div>
                </section>
            </div>
        </t>
    </template>

    <template id="imagebank_gallery_thank_you" name="Image Bank Thank You">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">
                <section class="o_gallery s_image_gallery o_grid o_spc-medium" data-columns="3" style="overflow: hidden;">
                    <div class="container">
                        <h2>Thank you</h2>
                        <p>Your image will undergo curation and if approved will be shown on our web page.</p>
                    </div>
                </section>
            </div>
        </t>
    </template>

    <template id="imagebank_gallery" name="Image Bank">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty imagebank-wrap">
                <section class="o_gallery s_image_gallery o_grid o_spc-medium" data-columns="3" style="overflow: hidden;">
                    <div class="container">
                        <div t-foreach="image_urls_by_category" t-as="categorylist" t-attf-class="row">
                            <t t-foreach="categorylist" t-as="url">
                                <t t-if="url_size > 1">
                                    <t t-if="url_index == 0">
                                        <div class="row col-lg-12">
                                            <h2>
                                                <t t-esc="url"></t>
                                            </h2>
                                        </div>
                                    </t>
                                    <t t-else="">
                                        <div class="col-lg-3" style="padding-bottom: 8px;">
                                            <img
                                                t-attf-src="{{ url }}"
                                                t-attf-class="img img-fluid"
                                                t-attf-data-index="{{ url_index }}">
                                            </img>
                                        </div>
                                    </t>
                                </t>
                            </t>
                        </div>
                    </div>
                </section>
                <section>
                    <div class="container">
                        <h2>Send us your picture</h2>
                        <form
                            style="padding-bottom: 16px;"
                            action="/imagebank/add_image"
                            method="POST"
                            enctype="multipart/form-data">
                            <input
                                type="hidden"
                                name="csrf_token"
                                t-att-value="request.csrf_token()"/>

                            <div class="form-group row">
                                <label
                                    class="col-sm-2 col-form-label"
                                    for="image">
                                    Image
                                </label>
                                <div class="col-sm-4">
                                    <input
                                        class="form-control-file"
                                        type="file"
                                        multiple="true"
                                        data-show-upload="true"
                                        data-show-caption="true"
                                        data-show-preview="true"
                                        name="image"
                                        required="true"
                                        accept="image/*">
                                    </input>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label
                                    class="col-sm-2 col-form-label"
                                    for="category">
                                    Category
                                </label>
                                <div class="col-sm-4">
                                    <select
                                        class="form-control"
                                        name="category">
                                        <t t-foreach="categories" t-as="category">
                                            <option t-attf-value="{{ category }}">
                                                <t t-esc="category"></t>
                                            </option>
                                        </t>
                                    </select>
                                </div>
                            </div>

                            <div class="form-check">
                                <label
                                    class="col-sm-6"
                                    for="i_accept">
                                    I have rights to the image and I allow its publishing.
                                </label>
                                <input
                                    class="form-check-input"
                                    type="checkbox"
                                    required="true"
                                    name="i_accept">
                                </input>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-4">
                                    <button
                                        style="margin-top: 16px;"
                                        class="btn btn-primary"
                                        type="submit">
                                        Submit
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </section>
            </div>
        </t>
    </template>
</odoo>
