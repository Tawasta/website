<openerp>
	<data>
		<!-- Customize footer  -->
		<template id="footer_simple" name="Simple Footer" inherit_id="website.footer_custom">
		
			<!-- Overwrite the whole footer -->
			<xpath expr="//div[@id='wrapwrap']/footer" position="replace">
				<footer>
					<div id='footer' class='container'>
						<div class="row">
							<div class='col-md-2' id='footer_info'>
								<ul class="list-unstyled">
									<li><i class="fa width-em1 fa-info"/> <span t-field="res_company.name"/></li>
									<t t-if="res_company.company_registry">
										<li><i class="fa width-em1" /> <span t-field="res_company.company_registry"/></li>
									</t>
								</ul>
							</div>
							
							<div class='col-md-2' id='footer_address'>
								<ul class="list-unstyled">
									<li><i class="fa width-em1 fa-map-marker"/> <span t-field="res_company.street"/></li>
									<t t-if="res_company.street2">
									   <li><i class="fa width-em1"/> <span t-field="res_company.street2"/></li>
									</t>
									<t t-if="res_company.city">
									   <li><i class="fa width-em1"/> <span t-field="res_company.zip"/> <span t-field="res_company.city"/></li>
									</t>
									<t t-if="res_company.country_id">
									   <li><i class="fa width-em1"/> <span t-field="res_company.country_id"/></li>
							        </t>
								</ul>
							</div>
							
							<div class='col-md-4' id='footer_empty'>
							
							</div>
						
							<div class='col-md-4' id='footer_contact'>
								<h4><a href="/page/website.contactus">Contact us</a></h4>
			                    
			                    <ul class="list-unstyled">
			                    	<t t-if="res_company.email">
			                        	<li><i class="fa width-em1 fa-envelope"/> <span t-field="res_company.email"/></li>
			                        </t>
			                        
			                        <t t-if="res_company.phone">
                        				<li><i class="fa width-em1 fa-phone"/> <span t-field="res_company.phone"/></li>
                        			</t>
			                    </ul>
			                    
			                    <!-- Language selector -->
			                    <ul class="list-inline js_language_selector mt16" t-if="(request.website_multilang and len(languages) &gt; 1) or editable">
			                        <li t-foreach="languages" t-as="lg">
			                            <a t-att-href="url_for(request.httprequest.path + '?' + keep_query(), lang=lg[0])" t-att-data-default-lang="editable and 'true' if lg[0] == website.default_lang_code else None" t-att-data-lang="lg[0]" class="js_change_lang">
			                              <t t-esc="lg[1].split('/').pop()"/>
			                            </a>
			                        </li>
			                        <li groups="base.group_website_publisher">
			                            <t t-set="url_return" t-value="url_for('', '[lang]') + '?' + keep_query()"/>
			                            <a t-attf-href="/web#action=base.action_view_base_language_install&amp;website_id=#{website.id}&amp;url_return=#{url_return}">
			                            <i class="fa fa-plus-circle"/>
			                            Add a language...
			                            </a>
			                        </li>
			                    </ul>
							</div>
						</div>
					</div>
				</footer>
			</xpath>
		</template>
		
		<!-- Remove the Odoo link -->
		<template id="footer_odoo_link_remove" name="Remove Odoo Link from Footer" inherit_id="website.layout_footer_copyright">
			<xpath expr="//div[@id='wrapwrap']/footer/div[2]/div[1]" position="replace" />
		</template>
		
	</data>
</openerp>