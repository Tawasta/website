<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<!-- Number of staff field before phonenumber -->
		<template id="checkout" inherit_id="website_sale.checkout">
			<xpath expr="//div[@class='col-md-8 oe_cart']/div/div[6]" position="before">
				<div id="staff_count_div" t-attf-class="form-group #{error.get('staff_count') and 'has-error' or ''} #{checkout.get('form_type')} col-lg-6">
					<label class="control-label" for="staff_count">Number of staff</label>

					<select name="staff_count" class="form-control">
						<option value="">Number of staff...</option>
						<t t-foreach="staffs or []" t-as="staff">
							<option t-att-value="staff" t-att-selected="staff==
								checkout.get('staff_count')">
								<t t-esc="staff"/>
							</option>

						</t>
					</select>
				</div>
			</xpath>

			<!-- Default value to Finland, might need fixing -->
			<xpath expr="//div[@class='col-md-8 oe_cart']/div/div[12]" position="replace">
				<div t-attf-class="form-group #{error.get('country_id') and 'has-error' or ''} col-lg-6">
                      <label class="control-label" for="country_id">Country</label>
                      <select name="country_id" class="form-control">
                          <t t-foreach="countries or []" t-as="country">
                              <option t-att-value="country.id" t-att-selected="country.id == (checkout.get('country_id') or 71)"><t t-esc="country.name"/></option>
                          </t>
                      </select>
                  </div>
              </xpath>

			<!-- Between clearfix and shipping divs -->
			<xpath expr="//div[@class='col-md-8 oe_cart']/div/div[13]" position="after">		
				<div id="membership_div" t-attf-class="form-group #{error.get('checkbox_membership') and 'has-error' or ''} #{checkout.get('form_type')} col-lg-12">
					<label>Membership</label>
					<p>
						<input type="checkbox" name="checkbox_membership" t-att-checked="checkout.get('checkbox_membership')"/>
						I would like to be a member
					</p>
				</div>
				<div id="steering_div" t-attf-class="form-group #{error.get('steering_member') and 'has-error' or ''} #{checkout.get('form_type')} col-lg-12">
					<p>
						<input type="checkbox" name="steering_member" t-att-checked="checkout.get('steering_member')" />
						I would like to be a steering group member
					</p>
				</div>
				<div id="privacy_div" t-attf-class="form-group #{error.get('member_privacy') and 'has-error' or ''} #{checkout.get('form_type')} col-lg-12">
					<label>Privacy</label>
					<p>
						<input type="checkbox" name="member_privacy" t-att-checked="checkout.get('member_privacy')" />
						I am willing to let COSS's members and partners use my information.
						Details of organisation can be published in COSS's homepages memberlist. 
					</p>
				</div>

				<!-- Separate divs or into same div? -->
				<div id="support_reason_div" t-attf-class="form-group #{error.get('reason1') and 'has-error' or ''} #{checkout.get('show_check')} col-lg-12">
					<label>Why do you wish to promote COSS ry's actions?:</label>
					<p>
						<input type="checkbox" name="reason1" t-att-checked="checkout.get('reason1')" />
						I wish to support open source communities
					</p>
					<br></br>
					<p>
						<input type="checkbox" name="reason2" t-att-checked="checkout.get('reason2')" />
						I want to participate in community's action.
					</p>

					<br></br>
					<p>
						<input type="checkbox" name="reason3" t-att-checked="checkout.get('reason3')" />
						Networking
					</p>

					<br></br>
					<p>
						<input type="checkbox" name="reason4" id="reason4" t-att-checked="checkout.get('reason4')" onchange='javascript:document.getElementById("other_reason").hidden=!document.getElementById("reason4").checked;' />
						Something else
						<input type="text" name="other_reason" hidden="True" id="other_reason" placeholder="Reason"/>
					</p>
				</div>
			</xpath>

			<!-- Hide elements for the other form -->
			<!-- Company -->
			<xpath expr="//div[@class='col-md-8 oe_cart']/div/div[3]" position="attributes">
				<attribute name="t-attf-class">form-group #{error.get('street') and 'has-error' or ''} #{checkout.get('form_type')} col-lg-6</attribute>
			</xpath>

			<!-- Phone  -->
			<xpath expr="//div[@class='col-md-8 oe_cart']/div/div[7]" position="attributes">
					<attribute name="t-attf-class">form-group #{error.get('phone') and 'has-error' or ''} #{checkout.get('form_type')} col-lg-6</attribute>
			</xpath>

			<!-- Street  -->
			<xpath expr="//div[@class='col-md-8 oe_cart']/div/div[8]" position="attributes">
				<attribute name="t-attf-class">form-group #{error.get('street2') and 'has-error' or ''} #{checkout.get('form_type')} col-lg-6</attribute>
			</xpath>

			<!-- Zip-code  -->
			<xpath expr="//div[@class='col-md-8 oe_cart']/div/div[11]" position="attributes">
				<attribute name="t-attf-class">form-group #{error.get('zip') and 'has-error' or ''} #{checkout.get('form_type')} col-lg-6</attribute>
			</xpath>

			<!-- Country  -->
			<xpath expr="//div[@class='col-md-8 oe_cart']/div/div[12]" position="attributes">
				<attribute name="t-attf-class">form-group #{error.get('country_id') and 'has-error' or ''} #{checkout.get('form_type')} col-lg-6</attribute>
			</xpath>

			<!-- State  -->
			<xpath expr="//div[@class='col-md-8 oe_cart']/div/div[13]" position="attributes">
				<attribute name="t-attf-class">form-group #{error.get('state_id') and 'has-error' or ''} #{checkout.get('form_type')} col-lg-6</attribute>
			</xpath>

			<!-- Shipping  -->
			<xpath expr="//div[@class='col-md-8 oe_cart']/div/div[19]" position="attributes">
				<attribute name="t-attf-style">#{checkout.get('shipping_style')}</attribute>
			</xpath>

		</template>

	</data>
</openerp>