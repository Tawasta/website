<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<template id="checkout" inherit_id="website_sale.checkout">
			<xpath expr="//div[@class='col-md-8 oe_cart']/div/div[6]" position="before">
				<div id="staff_count_div" t-attf-class="form-group #{error.get('staff_count') and 'has-error' or ''} col-lg-6">
					<label class="control-label" for="staff_count">Number of staff</label>

					<select name="staff_count" class="form-control">
						<option value="--">--</option>
						<option value="1-9">1-9</option>
						<option value="10-19">10-19</option>
						<option value="20-49">20-49</option>
						<option value="50-199">50-199</option> 
						<option value="200-499">200-499</option>
						<option value="500+">500+</option>
					</select>
				</div>
			</xpath>

			<!-- Between clearfix and shipping divs -->
			<xpath expr="//div[@class='col-md-8 oe_cart']/div/div[13]" position="after">

				<div id="membership_checkboxes" class="form-group col-lg-12">
					<label>Jäsenyys</label>
					<p>
						<input type="checkbox" name="checkbox_membership"/>
						Haluan liittyä jäseneksi
					</p>
					<p>
						<input type="checkbox" name="checkbox_membership2"/>
						Haluan liittyä ohjausryhmäjäseneksi
					</p>
					<label>Yksityisyys</label>
					<p>
						<input type="checkbox" name="checkbox_privacy"/>
						Tietojani voidaan antaa COSSin jäsenille ja yhteistyökumppaneille. Organisaation tiedot saa julkaista COSSin kotisivujen jäsenlistalla.
					</p>
				</div>
			</xpath>
		</template>

	</data>
</openerp>