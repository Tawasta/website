<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- Extend membership form view -->
        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">view.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="membership.view_partner_form"/>
            <field name="priority" eval="200"/>
            <field name="arch" type="xml">
                <field name="member_lines" position="before">
                    <group string="Website sale">
                        <group>
                            <field name="staff_count" widget="selection" attrs="{'invisible': [('is_company','=',False)]}"/>
                            <field name="member_privacy" widget="checkbox"/>
                            <field name="steering_member" widget="checkbox"/>

                        </group>
                        <group>
                            <field name="reason1" widget="checkbox" />
                            <field name="reason2" widget="checkbox" />
                            <field name="reason3" widget="checkbox" />
                            <field name="other_reason" />
                        </group>
                    </group>
                </field>
                <!-- Job position visible to everyone -->
                <field name="function" position="replace">
                    <field name="function"/>
                </field>
            </field>
        </record>

        <!-- Extend Membership Products form view-->
        <record id="membership_products_view_buttons" model="ir.ui.view">
            <field name="name">membership.products.view.buttons</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="membership.membership_products_form"/>
            <field name="priority" eval="200"/>
            <field name="arch" type="xml">
                <!-- Add form-type field -->
                <field name="active" position="after">
                    <field name="membership_checkout_form" widget="selection"/>
                </field>
            </field>
        </record>
    </data>
</openerp>