<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- Extend membership form view -->
        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">view.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="membership.view_partner_form"/>
            <field name="priority" eval="200"/>
            <field name="arch" type="xml">
                <field name="website" position="before">
                    <field name="staff_count" attrs="{'invisible': [('is_company','=',False)]}" />
                    <field name="member_privacy" widget="checkbox"/>
                    <field name="steering_member" widget="checkbox"/>
                    
                    <field name="reason1" widget="checkbox" attrs="{'invisible': [('reason1','=',False)]}"/>
                    <field name="reason2" widget="checkbox" attrs="{'invisible': [('reason2','=',False)]}"/>
                    <field name="reason3" widget="checkbox" attrs="{'invisible': [('reason3','=',False)]}"/>
                    <field name="other_reason" attrs="{'invisible':[('other_reason','=', False)]}"/>

                </field>
            </field>
        </record>

    </data>
</openerp>