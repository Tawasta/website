<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Hide "Share"-tab -->
    <template id="slide_detail_view_hide_share"
              inherit_id="website_slides.slide_detail_view"
              active="False"
              customize_show="True"
              name="Hide 'Share'-tab">

        <xpath expr="//a[@href='#share']/.." position="replace" />
    </template>

    <!-- Hide "Comments"-tab -->
    <template id="slide_detail_view_hide_comments"
              inherit_id="website_slides.slide_detail_view"
