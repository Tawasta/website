        <xpath expr="//a[@href='#transcript']/.." position="replace" />
    </template>

    <!-- Hide "Statistic"-tab -->
    <template id="slide_detail_view_hide_statistic"
              inherit_id="website_slides.slide_detail_view"
              active="False"
              customize_show="True"
              name="Hide 'Statistic'-tab">

        <xpath expr="//a[@href='#statistic']/.." position="replace" />
    </template>

</odoo>
