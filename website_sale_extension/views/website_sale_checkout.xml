<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<!-- Reorganize and add ids to checkout form -->
		<template id="checkout" inherit_id="website_sale.checkout">

			<xpath expr="//div[@class='container oe_website_sale']" position="replace">

				<div id="website_sale_div" class="container oe_website_sale">
					<ul class="wizard pull-right">
						<li><a href="/shop/cart" class="text-success">Review Order<span class="chevron"></span></a></li>
						<li class="text-primary">Shipping &amp; Billing<span class="chevron"></span></li>
						<li class="text-muted">Payment<span class="chevron"></span></li>
						<li class="text-muted">Confirmation<span class="chevron"></span></li>
					</ul>
					<h1>Your Address</h1>
					<form action="/shop/confirm_order" method="post">

						<div id="checkout_row" class="row">
							<div id="form_container" class="col-md-8 oe_cart">
								<h3 class="page-header mt16">Billing Information
									<small groups="base.group_public"> or
										<a class='btn btn-primary' t-if="not partner" t-attf-href="/web?redirect=#{ request.httprequest.url }">Sign in</a>
									</small>
								</h3>
								<div id="form_row" class="row">
									<!-- Hide company fields when checked and private fields when not -->
									<div id="personal_customer_div" t-attf-class="col-lg-12 mb16">
										<input type="checkbox" name="personal_customer" id="personal_customer" onchange='javascript:document.getElementById("businessid_div").hidden=document.getElementById("personal_customer").checked;
										javascript:document.getElementById("website_div").hidden=document.getElementById("personal_customer").checked;
										javascript:document.getElementById("contact_label").hidden=!document.getElementById("personal_customer").checked;
										javascript:document.getElementById("company_label").hidden=document.getElementById("personal_customer").checked;
										javascript:document.getElementById("title_div").hidden=!document.getElementById("personal_customer").checked;
										javascript:document.getElementById("organization_div").hidden=!document.getElementById("personal_customer").checked;'/> Private Customer
									</div>
									<t t-set="name_mandatory" t-value="'bold' if 'name' in mandatory else ''"/>

									<div id="name_div" t-attf-class="form-group #{error.get('name') and 'has-error' or ''} col-lg-6">
										<label id="contact_label" t-attf-class="control-label #{name_mandatory}" 
											for="contact_name" hidden="true">Your Name (Forename Surname)</label>
										<label id="company_label" t-attf-class="control-label #{name_mandatory}" 
											for="company_name">Company Name</label>
										<input type="text" name="name" class="form-control" t-att-value="checkout.get('name')"/>
									</div>

									<div id="organization_div" t-attf-class="form-group #{error.get('company_name') and 'has-error' or ''} col-lg-6" hidden="true">
										<label t-attf-class="control-label #{'bold' if 'company_name' in mandatory else ''} " for="company_name">Organization</label>
										<input type="text" name="company_name" class="form-control" t-att-value="checkout.get('company_name')"/>
									</div>

									<div id="title_div" t-attf-class="form-group #{error.get('function') and 'has-error' or ''} col-lg-6" hidden="true">
										<label t-attf-class="control-label #{'bold' if 'function' in mandatory else ''} " for="function">Job position</label>
										<input type="text" name="function" class="form-control" t-att-value="checkout.get('function')"/>
									</div>

									<div id="email_div" t-attf-class="form-group #{error.get('email') and 'has-error' or ''} col-lg-6">
										<label t-attf-class="control-label #{'bold' if 'email' in mandatory else ''}" for="contact_name">Email</label>
										<input type="email" name="email" class="form-control" t-att-value="checkout.get('email')"/>
									</div>

									<div id="phone_div" t-attf-class="form-group #{error.get('phone') and 'has-error' or ''} col-lg-6">
										<label t-attf-class="control-label #{'bold' if 'phone' in mandatory else ''}" for="phone">Phone</label>
										<input type="tel" name="phone" class="form-control" t-att-value="checkout.get('phone')"/>
									</div> 

									<div id="company_name_div" t-attf-class="form-group #{error.get('street') and 'has-error' or ''} col-lg-6">
										<label t-attf-class="control-label #{'bold' if 'street' in mandatory else ''}" for="street">Address 1</label>
										<input type="text" name="street" class="form-control" t-att-value="checkout.get('street')"/>
									</div>

									<div id="vat_div" t-if="has_check_vat" t-attf-class="form-group #{error.get('vat') and 'has-error' or ''} col-lg-6 hidden">
										<label t-attf-class="control-label  #{'bold' if 'vat' in mandatory else ''}" for="vat" style="font-weight: normal">VAT Number</label>
										<input type="text" name="vat" class="form-control" t-att-value="checkout.get('vat')"/>
									</div>

									<div id="businessid_div" t-if="has_check_vat" t-attf-class="form-group #{error.get('businessid') and 'has-error' or ''} col-lg-6">
										<label t-attf-class="control-label  #{'bold' if 'businessid' in mandatory else ''}" for="businessid" style="font-weight: normal">Business ID</label>
										<input type="text" name="businessid" class="form-control" t-att-value="checkout.get('businessid')"/>
									</div>

									<div id="vat_spacer" t-if="has_check_vat" t-attf-class="clearfix"/>

									<div id="street_div" t-attf-class="form-group #{error.get('street2') and 'has-error' or ''} col-lg-6">
										<label t-attf-class="control-label #{'bold' if 'street2' in mandatory else ''}" for="street2">Address 2</label>
										<input type="text" name="street2" class="form-control" t-att-value="checkout.get('street2')"/>
									</div>
									
									<div id="city_div" t-attf-class="form-group #{error.get('city') and 'has-error' or ''} col-lg-6">
										<label t-attf-class="control-label #{'bold' if 'city' in mandatory else ''}" for="city">City</label>
										<input type="text" name="city" class="form-control" t-att-value="checkout.get('city')"/>
									</div>

									<div id="zip_div" t-attf-class="form-group #{error.get('zip') and 'has-error' or ''} col-lg-6">
										<label t-attf-class="control-label #{'bold' if 'zip' in mandatory else ''}" for="zip">Zip / Postal Code</label>
										<input type="text" name="zip" class="form-control" t-att-value="checkout.get('zip')"/>
									</div>

									<div id="country_div" t-attf-class="form-group #{error.get('country_id') and 'has-error' or ''} col-lg-6">
										<label t-attf-class="control-label #{'bold' if 'country_id' in mandatory else ''}" for="country_id">Country</label>
										<select name="country_id" class="form-control">
											<option value="">Country...</option>
											<t t-foreach="countries or []" t-as="country">
												<option t-att-value="country.id" t-att-selected="country.id == (checkout.get('country_id') or 71)"><t t-esc="country.name"/></option>
											</t>
										</select>
									</div>
									
									<div id="state_div" t-attf-class="form-group #{error.get('state_id') and 'has-error' or ''} col-lg-6">
										<label t-attf-class="control-label #{'bold' if 'state_id' in mandatory else ''}" for="state_id" style="font-weight: normal">State / Province</label>
										<select name="state_id" class="form-control">
											<option value="">select...</option>
											<t t-foreach="states or []" t-as="state">
												<option t-att-value="state.id" style="display:none;" t-att-data-country_id="state.country_id.id" t-att-selected="state.id == checkout.get('state_id')"><t t-esc="state.name"/></option>
											</t>
										</select>
									</div>

									<div class="clearfix"/>

									<div id="website_div" t-attf-class="form-group #{error.get('webpage') and 'has-error' or ''} col-lg-6">
										<label t-attf-class="control-label #{'bold' if 'website' in mandatory else ''}" for="website" style="font-weight:normal">Website</label>
										<input type="text" name="website" class="form-control" t-att-value="checkout.get('website')"/>
									</div>
									
									<div id="mandatory_fields" t-attf-class="col-lg-12">
										<p>
											Mandatory fields are bolded in the form.
										</p>
										<br></br>
									</div>

									<!-- Shipping details (hidden in short form)-->
									<div id="shipping_section_div" t-attf-class="form-group col-lg-12 hidden">
										<label>Shipping</label>
										<select name="shipping_id" class="form-control">
											<option value="0">Ship to the same address</option>
											<t t-foreach="shippings" t-as="shipping">
												<option t-att-value="shipping.id" t-att-selected="shipping.id == shipping_id"
													t-att-data-shipping_name="shipping.name"
													t-att-data-shipping_phone="shipping.phone"
													t-att-data-shipping_street="shipping.street"
													t-att-data-shipping_city="shipping.city"
													t-att-data-shipping_zip="shipping.zip"
													t-att-data-shipping_state_id="shipping.state_id and shipping.state_id.id"
													t-att-data-shipping_country_id="shipping.country_id and shipping.country_id.id"
													><t t-esc="', '.join('\n'.join(shipping.name_get()[0][1].split(',')).split('\n')[1:])"/></option>
												</t>
												<option value="-1" t-att-selected="error and len(error) > 0 and shipping_id == -1">-- Create a new address --</option>
										</select>
									</div>
								</div>
								<div id="shipping_information_div" class="js_shipping row mb16 hidden" t-att-style="not shipping_id and 'display:none' or ''">
									<h3 class="oe_shipping col-lg-12 mt16">Shipping Information</h3>

									<div id="shipping_name_div" t-attf-class="form-group #{error.get('shipping_name') and 'has-error' or ''} col-lg-6">
										<label class="control-label" for="shipping_name">Name (Shipping)</label>
										<input type="text" name="shipping_name" class="form-control" t-att-value="checkout.get('shipping_name', '')" t-att-readonly="'readonly' if shipping_id &gt;= 0 else ''"/>
									</div>
									<div id="shipping_phone_div" t-attf-class="form-group #{error.get('shipping_phone') and 'has-error' or ''} col-lg-6">
										<label class="control-label" for="shipping_phone">Phone</label>
										<input type="tel" name="shipping_phone" class="form-control" t-att-value="checkout.get('shipping_phone', '')" t-att-readonly="  'readonly' if shipping_id &gt;= 0 else ''"/>
									</div>
									<div id="shipping_street_div" t-attf-class="form-group #{error.get('shipping_street') and 'has-error' or ''} col-lg-6">
										<label class="control-label" for="shipping_street">Street</label>
										<input type="text" name="shipping_street" class="form-control" t-att-value="checkout.get('shipping_street', '')" t-att-readonly=" 'readonly' if shipping_id &gt;= 0 else ''"/>
									</div>
									<div class="clearfix"/>
									<div id="shipping_city_div" t-attf-class="form-group #{error.get('shipping_city') and 'has-error' or ''} col-lg-6">
										<label class="control-label" for="shipping_city">City</label>
										<input type="text" name="shipping_city" class="form-control" t-att-value="checkout.get('shipping_city', '')" t-att-readonly=" 'readonly' if shipping_id &gt;= 0 else ''"/>
									</div>
									<div id="shipping_zip_div" t-attf-class="form-group #{error.get('shipping_zip') and 'has-error' or ''} col-lg-6">
										<label class="control-label" for="shipping_zip" style="font-weight: normal">Zip / Postal Code</label>
										<input type="text" name="shipping_zip" class="form-control" t-att-value="checkout.get('shipping_zip', '')" t-att-readonly=" 'readonly' if shipping_id &gt;= 0 else ''"/>
									</div>
									<div id="shipping_coutry_div" t-attf-class="form-group #{error.get('shipping_country_id') and 'has-error' or ''} col-lg-6">
										<label class="control-label" for="shipping_country_id">Country</label>
										<select name="shipping_country_id" class="form-control" t-att-disabled="  'disabled' if shipping_id &gt;= 0 else ''">
											<option value="">Country...</option>
											<t t-foreach="countries or []" t-as="country">
												<option t-att-value="country.id" t-att-selected="country.id == checkout.get('shipping_country_id')"><t t-esc="country.name"/></option>
											</t>
										</select>
									</div>
									<div id="shipping_state_div" t-attf-class="form-group #{error.get('shipping_state_id') and 'has-error' or ''} col-lg-6">
										<label class="control-label" for="shipping_state_id" style="font-weight: normal">State / Province</label>
										<select name="shipping_state_id" class="form-control" t-att-readonly="  'readonly' if shipping_id &gt;= 0 else ''">
											<option value="">State / Province...</option>
											<t t-foreach="states or []" t-as="state">
												<option t-att-value="state.id" style="display:none;" t-att-data-country_id="state.country_id.id" t-att-selected="state.id == checkout.get('shipping_state_id')"><t t-esc="state.name"/></option>
											</t>
										</select>
									</div>
								</div>
								<div id="return_cart_div" class="clearfix">
									<a href="/shop/cart" class="btn btn-default mb32"><span class="fa fa-long-arrow-left"/> Return to Cart</a>
									<a class="btn btn-default btn-primary pull-right mb32 a-submit">Confirm <span class="fa fa-long-arrow-right"/></a>
								</div>
							</div>
							<div id="order_summary_div" class="col-lg-offset-1 col-lg-3 col-md-3 text-muted">
								<h3 class="page-header mt16">Your Order <small><a href="/shop/cart"><span class="fa fa-arrow-right"/> change</a></small></h3>
								<t t-set="website_sale_order" t-value="website.sale_get_order()"/>
								<div class="row">
									<div id="subtotal_div" class="col-sm-6 text-right">Subtotal: </div>
									<div id="subtotal_amount_div" class="col-sm-6"><span style="white-space: nowrap;" t-field="website_sale_order.amount_untaxed" t-field-options='{
										"widget": "monetary",
										"from_currency": "website_sale_order.pricelist_id.currency_id",
										"display_currency": "user_id.partner_id.property_product_pricelist.currency_id"
										}'/>
									</div>
									<div id="taxes_div" class="col-sm-6 text-right">Taxes: </div>
									<div id="taxes_amount_div" class="col-sm-6"><span style="white-space: nowrap;" t-field="website_sale_order.amount_tax" t-field-options='{
										"widget": "monetary",
										"from_currency": "website_sale_order.pricelist_id.currency_id",
										"display_currency": "user_id.partner_id.property_product_pricelist.currency_id"
										}'/>
									</div>
									<div id="total_div" class="col-sm-6 text-right"><h4>Total To Pay: </h4></div>
									<div id="total_amount_div" class="col-sm-6"><h4><span style="white-space: nowrap;" t-field="website_sale_order.amount_total" t-field-options='{
										"widget": "monetary",
										"from_currency": "website_sale_order.pricelist_id.currency_id",
										"display_currency": "user_id.partner_id.property_product_pricelist.currency_id"
										}'/></h4>
									</div>
								</div>
							</div>
						</div>
					</form>
				</div>
				<link rel="stylesheet" href="/website_sale_extension/static/src/css/style.css"/>
			</xpath>

		</template>

	</data>
</openerp>