<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<!-- Customize Product Page  -->
		<template id="product_simple" name="Simple Product" inherit_id="website_sale.product">
			
			<!-- Remove money back guarantee -->
			<xpath expr="//section[@id='product_detail']/div[@class='row'][2]/div[2]/p[@class='text-muted']" position="replace" />

			<!-- Change Add to cart -button -->
			<xpath expr="//a[@id='add_to_cart']" position="replace">
				<a id="add_to_cart" class="btn btn-primary btn-lg mt8 js_check_product a-submit" href="#">Choose</a>
			</xpath>

		</template>

		<!-- Hide Policies and Secure payment from cart -->
		<template id="cart_simple" name="Simple Shopping Cart" inherit_id="website_sale.cart">

            <!-- Remove "Policies" from right panel -->
			<xpath expr="//div[@id='right_column']/h4" position="replace"/>
			<xpath expr="//div[@id='right_column']/ul" position="replace"/>

            <!-- Remove "Secure payment" from right panel -->
            <xpath expr="//div[@id='right_column']/h4" position="replace"/>
			<xpath expr="//div[@id='right_column']/ul" position="replace"/>

			<xpath expr="//a[@href='/shop']" position="replace">
				<a href="/shop" class="btn btn-default mb32"><span class="fa fa-long-arrow-left"/> <span class="hidden-xs">Return Back</span><span class="visible-xs-inline">Return Back</span></a>
			</xpath>

			<xpath expr="//a[@href='/shop/checkout']" position="replace">
				<a t-if="not optional_products and website_sale_order and website_sale_order.website_order_line" class="btn btn-primary pull-right mb32" href="/shop/checkout"><span class="hidden-xs">Continue</span><span class="visible-xs-inline">Continue</span> <span class="fa fa-long-arrow-right"/></a>

			</xpath>

		</template>
		
		<template id="checkout_simple" inherit_id="website_sale_extension.checkout">
			
			<xpath expr="//div[@id='return_cart_div']/a[1]" position="replace">

				<a href="/shop/cart" class="btn btn-default mb32"><span class="fa fa-long-arrow-left"/> Return Back</a>
			</xpath>

		</template>

		<template id="payment_simple" inherit_id="website_sale.payment">

			<xpath expr="//div[@class='col-lg-3 col-sm-3']" position="replace">
				<div class="col-lg-3 col-sm-3">
                  <t t-foreach="acquirers or []" t-as="acquirer">
                      <div t-att-data-id="acquirer.id" class="oe_sale_acquirer_button hidden pull-right">
                        <br></br>
                        <div t-raw="acquirer.button"/>
                      </div>
                  </t>
              </div>
			</xpath>

		</template>
	</data>
</openerp>

