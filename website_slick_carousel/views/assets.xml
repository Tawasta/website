<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="website_slick_carousel_assets"
        name="website_slick_carousel_assets"
        inherit_id="website.assets_frontend">
        <xpath expr="//link[last()]"
            position="after">
            <link rel="stylesheet"
                type="text/css"
                href="/website_slick_carousel/static/src/css/slick.css"></link>
            <link rel="stylesheet"
                type="text/css"
                href="/website_slick_carousel/static/src/css/slick-theme.css"></link>
        </xpath>
    </template>

    <template id="website_slick_carousel_js_assets"
        name="website_slick_carousels_js_assets"
        inherit_id="web.layout">

        <xpath expr="//body"
            position="inside">
            <script src="/website_slick_carousel/static/src/js/slick.min.js">
            </script>
        </xpath>

    </template>
</odoo>
