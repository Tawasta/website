<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="website_topmenu_social_icons.menu_view" inherit_id="website.layout">
        <xpath expr="//ul[@id='top_menu']" position="after">
            <t t-foreach="['facebook', 'github', 'googleplus', 'instagram', 'linkedin', 'twitter', 'youtube']"
                t-as="item">
                <a t-if="website['social_' + item]" t-att-href="website['social_' + item]">
                    <i t-attf-class="fa fa-2x fa-{{ item }}"></i>
                </a>
            </t>
        </xpath>
    </template>
</odoo>


