<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">

        <!-- Define styles in system config parameters -->
        <record id="icp_cookie_container_styles" model="ir.config_parameter">
            <field name="key">website_cookie_notice_extension.icp_cookie_container_styles</field>
            <field name="value">background-color:rgb(35, 122, 252);</field>
        </record>

        <record id="icp_cookie_btn_styles" model="ir.config_parameter">
            <field name="key">website_cookie_notice_extension.icp_cookie_btn_styles</field>
            <field name="value">color: #fff;</field>
        </record>

        <!-- Hide unnecessary pages -->
        <record id="website_legal_page.legal_advice_link" model="ir.ui.view">
            <field name="active" eval="0"/>
        </record>
        <record id="website_legal_page.terms_of_use_link" model="ir.ui.view">
            <field name="active" eval="0"/>
        </record>
    </data>
</odoo>
