<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="website_logo_alt_text_layout_logo_show"
        name="layout_logo_show"
        inherit_id="website.layout_logo_show">
        <xpath expr="//span[@t-field='res_company.logo'"
            position="attributes">
            <attribute name="alt"
                value="'Logo of %s' % res_company.name"></attribute>
        </xpath>

    </template>
</odoo>
