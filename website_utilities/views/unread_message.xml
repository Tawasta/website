<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <act_window id="action_unread_message_formats"
        name="Unread messages formats"
        res_model="unread.message"
        view_mode="tree"
        limit="80" />
    
    <menuitem
        id="menu_unread_message_formats"
        name="Unread messages formats"
        action="action_unread_message_formats"
        parent="base.menu_custom"
        sequence="100"
        groups="base.group_no_one"
        />


    <record id="unread_message_tree_view" model="ir.ui.view">
        <field name="name">unread.message.tree.view</field>
        <field name="model">unread.message</field>
        <field name="arch" type="xml">
            <tree string="Unread message format" editable="top">
                <field name="id"/>
                <field name="res_model" colspan="4"/>
                <field name="url_format" colspan="4"/>
            </tree>
        </field>
    </record>

</odoo>
