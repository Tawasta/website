<odoo>

    <template id="visitor_gallery">
        <t t-call="website.layout">
            <t t-set="pageName" t-value="'Visitor Gallery'"/>
            <div id="wrap" class="oe_structure oe_empty">
                <section class="o_gallery s_image_gallery o_grid o_spc-medium" data-columns="3" style="overflow: hidden;">
                    <div class="container">
                        <div class="row">
                            <t t-foreach="image_urls" t-as="url">
                                <div class="col-lg-3" style="padding-bottom: 8px;">
                                    <img t-attf-src="{{ url }}" t-attf-class="img img-fluid" t-attf-data-index="{{ url_index }}"></img>
                                </div>
                            </t>
                        </div>
                    </div>
                </section>
                <section>
                    <div class="container">
                        <h2>Send us your picture</h2>
                        <form action="/visitor_gallery/add_image" method="POST" enctype="multipart/form-data">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <label for="image">Image</label>
                            <input type="file"  class="file" multiple="false" data-show-upload="true" data-show-caption="true" lass="file" data-show-preview="true" name="image"></input>
                            <input type="submit" value="Submit" class="btn btn-primary"></input>
                        </form>
                    </div>
                </section>
            </div>
        </t>
    </template>
</odoo>
